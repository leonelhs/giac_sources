assume(a=[0.9,-5,5,0.1]);
assume(b=[-0.5,-5,5,0.1]);
A:=point((1+i*a)/(1-i*a));
B:=point((1+i*b)/(1-i*b));
C:=point(1);
c:=circle(0,1);
R:=inter(c,perpen_bisector(A,B))[1];
triangle(A,B,C); D:=line(C,R);
P:=single_inter(D,perpen_bisector(B,C));
Q:=single_inter(D,perpen_bisector(A,C));
K:=midpoint(B,C);
L:=midpoint(A,C);

area(R,P,K);
area(R,L,Q);